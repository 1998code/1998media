{
  "functions": {
    "api/*": {
      "runtime": "vercel-php@0.4.0",
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.php" },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "HK"
        }
      ],
      "destination": "/api/index.php?lang=zh",
      "permanent": false
    },
    { "source": "/:match*", "destination": "/api/:match*" },
    { "source": "/en", "destination": "/api/index.php?lang=en" },
    { "source": "/hk", "destination": "/api/index.php?lang=zh" }
  ]
}
